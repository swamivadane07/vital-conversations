{
  "deployment": {
    "name": "medical-app-deployment",
    "namespace": "medical-app-frontend",
    "image": {
      "repository": "your-account-id.dkr.ecr.us-west-2.amazonaws.com/medical-app",
      "tag": "latest",
      "pullPolicy": "Always"
    },
    "replicas": 3,
    "resources": {
      "limits": {
        "cpu": "200m",
        "memory": "256Mi"
      },
      "requests": {
        "cpu": "100m",
        "memory": "128Mi"
      }
    },
    "ports": [
      {
        "containerPort": 80,
        "protocol": "TCP"
      }
    ],
    "environment": [
      {
        "name": "NODE_ENV",
        "value": "production"
      },
      {
        "name": "SUPABASE_URL",
        "valueFrom": {
          "configMapKeyRef": {
            "name": "frontend-config",
            "key": "SUPABASE_URL"
          }
        }
      },
      {
        "name": "SUPABASE_ANON_KEY",
        "valueFrom": {
          "secretKeyRef": {
            "name": "frontend-secrets",
            "key": "SUPABASE_ANON_KEY"
          }
        }
      }
    ],
    "healthcheck": {
      "livenessProbe": {
        "httpGet": {
          "path": "/",
          "port": 80
        },
        "initialDelaySeconds": 30,
        "periodSeconds": 10
      },
      "readinessProbe": {
        "httpGet": {
          "path": "/",
          "port": 80
        },
        "initialDelaySeconds": 5,
        "periodSeconds": 5
      }
    }
  },
  "service": {
    "name": "medical-app-frontend-service",
    "type": "ClusterIP",
    "ports": [
      {
        "port": 80,
        "targetPort": 80,
        "protocol": "TCP"
      }
    ]
  },
  "ingress": {
    "name": "medical-app-ingress",
    "annotations": {
      "kubernetes.io/ingress.class": "alb",
      "alb.ingress.kubernetes.io/scheme": "internet-facing",
      "alb.ingress.kubernetes.io/target-type": "ip",
      "alb.ingress.kubernetes.io/listen-ports": "[{\"HTTP\": 80}, {\"HTTPS\": 443}]",
      "alb.ingress.kubernetes.io/ssl-redirect": "443"
    },
    "rules": [
      {
        "host": "your-domain.com",
        "http": {
          "paths": [
            {
              "path": "/",
              "pathType": "Prefix",
              "backend": {
                "service": {
                  "name": "medical-app-frontend-service",
                  "port": {
                    "number": 80
                  }
                }
              }
            }
          ]
        }
      }
    ]
  },
  "autoscaling": {
    "minReplicas": 2,
    "maxReplicas": 10,
    "targetCPUUtilizationPercentage": 70,
    "targetMemoryUtilizationPercentage": 80
  }
}